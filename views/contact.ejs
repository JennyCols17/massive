<%- include('partials/header', {title: 'Contact Us'}) %>
<%- include('partials/navbar') %>

<main class="bg-slate-50 min-h-screen py-16 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
            
            <div class="bg-white shadow-2xl rounded-3xl p-8 md:p-12 border border-slate-100">
                <div class="mb-8">
                    <h2 class="text-2xl font-black text-slate-900 uppercase italic">Request a Call</h2>
                    <p class="text-slate-500 mt-2">Give us some info so the right technician can get back to you.</p>
                </div>

                <form action="/contact" method="POST" class="space-y-5">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                        <div>
                            <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">First Name</label>
                            <input type="text" name="firstName" required class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Last Name</label>
                            <input type="text" name="lastName" required class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:md:grid-cols-2 gap-5">
                        <div>
                            <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Email Address</label>
                            <input type="email" name="email" required class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                        </div>
                        <div>
                            <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Phone Number</label>
                            <input type="tel" name="phone" placeholder="+1 (555) 000-0000" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                        </div>
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Part Interest</label>
                        <select name="interest" class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition bg-white">
                            <option value="engine">Engine Components</option>
                            <option value="braking">Braking Systems</option>
                            <option value="electrical">Electrical & Lighting</option>
                            <option value="other">General Inquiry</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-xs font-bold text-slate-700 uppercase tracking-wider mb-2">Message</label>
                        <textarea name="message" rows="4" required class="w-full px-4 py-3 rounded-xl border border-slate-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition resize-none"></textarea>
                    </div>

                    <p class="text-[10px] text-slate-400 leading-tight">
                        By clicking "Contact Me", you agree to our Privacy Statement. Motus Precision technicians may contact you regarding your technical inquiry.
                    </p>

                    <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-black py-4 rounded-xl shadow-lg shadow-blue-500/30 transition-all transform hover:scale-[1.02] uppercase tracking-widest text-sm">
                        Contact Me
                    </button>
                </form>
            </div>

            <div class="lg:pt-12">
                <h1 class="text-4xl md:text-5xl font-black text-slate-900 leading-tight mb-12">
                    How would you like to contact <span class="text-blue-600 italic">Motus?</span>
                </h1>

                <div class="space-y-10">
                    <div class="flex gap-6">
                        <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-blue-600">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-lg font-bold text-slate-900">Need help now?</h4>
                            <p class="text-slate-600">Call our technical line: <span class="text-blue-600 font-bold">1-800-MOTUS-PRO</span></p>
                        </div>
                    </div>

                    <div class="flex gap-6">
                        <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-blue-600">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-lg font-bold text-slate-900">For Tech Support</h4>
                            <p class="text-slate-600">Visit our <a href="#" class="text-blue-600 hover:underline">Knowledge Base</a> for installation guides.</p>
                        </div>
                    </div>

                    <div class="flex gap-6">
                        <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-blue-600">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                        </div>
                        <div>
                            <h4 class="text-lg font-bold text-slate-900">OEM Warranty</h4>
                            <p class="text-slate-600">All parts come with a 1-year guarantee. <a href="#" class="text-blue-600 hover:underline">Read more.</a></p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</main>

<%- include('partials/footer') %>